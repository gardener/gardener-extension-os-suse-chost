#cloud-config
write_files:
- path: '/foo'
  permissions: '0600'
  encoding: b64
  content: |
    YmFy
- path: '/etc/systemd/system/containerd.service'
  encoding: b64
  content: |
    
- path: '/etc/metadata/containerruntime'
  permissions: '0644'
  encoding: b64
  content: |
    Q09OVEFJTkVSX1JVTlRJTUVfQklOX1BBVEg9L3Vzci9zYmlu
- path: '/etc/systemd/system/docker.service'
  encoding: b64
  content: |
    dW5pdA==
- path: '/etc/systemd/system/docker.service.d/10-docker-opts.conf'
  encoding: b64
  content: |
    b3ZlcnJpZGU=
runcmd:
- "until zypper -q install -y docker wget socat jq nfs-client; [ $? -ne 7 ]; do sleep 1; done"
- zypper addrepo -G http://download.opensuse.org/update/openSUSE-stable upstream
- zypper -n refresh
- zypper install -y containerd-ctr-$(rpm -q --queryformat "%{VERSION}" containerd)
- cp /usr/sbin/containerd-ctr /usr/sbin/ctr
- systemctl daemon-reload
- ip link set dev eth0 mtu 1460
- grep -q '^MTU' /etc/sysconfig/network/ifcfg-eth0 && sed -i 's/^MTU.*/MTU=1460/' /etc/sysconfig/network/ifcfg-eth0 || echo 'MTU=1460' >> /etc/sysconfig/network/ifcfg-eth0
- systemctl enable 'docker.service' && systemctl restart 'docker.service'
