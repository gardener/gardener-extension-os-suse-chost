#!/bin/bash

mkdir -p '/'
cat << EOF | base64 -d > '/foo'
YmFy
EOF
chmod '0600' '/foo'


cat << EOF | base64 -d > '/etc/systemd/system/containerd.service'

EOF
mkdir -p /etc/metadata
cat << EOF | base64 -d > '/etc/metadata/containerruntime'
Q09OVEFJTkVSX1JVTlRJTUVfQklOX1BBVEg9L3Vzci9zYmlu
EOF
cat << EOF | base64 -d > '/etc/systemd/system/docker.service'
dW5pdA==
EOF

mkdir -p '/etc/systemd/system/docker.service.d'
cat << EOF | base64 -d > '/etc/systemd/system/docker.service.d/10-docker-opts.conf'
b3ZlcnJpZGU=
EOF
until zypper -q install -y docker wget socat jq nfs-client; [ $? -ne 7 ]; do sleep 1; done
zypper addrepo -G http://download.opensuse.org/update/openSUSE-stable upstream
zypper -n refresh
zypper install -y containerd-ctr-$(rpm -q --queryformat "%{VERSION}" containerd)
cp /usr/sbin/containerd-ctr /usr/sbin/ctr

systemctl daemon-reload
ip link set dev eth0 mtu 1460
grep -q '^MTU' /etc/sysconfig/network/ifcfg-eth0 && sed -i 's/^MTU.*/MTU=1460/' /etc/sysconfig/network/ifcfg-eth0 || echo 'MTU=1460' >> /etc/sysconfig/network/ifcfg-eth0
rm -rf /etc/containerd/config.toml
systemctl enable containerd.service && systemctl restart containerd.service
